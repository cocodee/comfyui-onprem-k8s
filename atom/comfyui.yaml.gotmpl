# Default values for comfyui.
# This is a YAML-formatted file.
# Declare variables to be passed into your templates.

replicaCount: 2

image:
  repository: reg.supremind.info/product/data/ai_infra/comfyui-onprem-k8s
  pullPolicy: IfNotPresent
  # Overrides the image tag whose default is the chart appVersion.
  tag: "comfyui-8115d8c"

imagePullSecrets: ["atom-global-images"]
nameOverride: ""
fullnameOverride: ""

serviceAccount:
  # Specifies whether a service account should be created
  create: true
  # Automatically mount a ServiceAccount's API credentials?
  automount: true
  # Annotations to add to the service account
  annotations: {}
  # The name of the service account to use.
  # If not set and create is true, a name is generated using the fullname template
  name: ""

podAnnotations: {}
podLabels: {}

podSecurityContext: {}
  # fsGroup: 2000

securityContext: {}
  # capabilities:
  #   drop:
  #   - ALL
  # readOnlyRootFilesystem: true
  # runAsNonRoot: true
  # runAsUser: 1000

service:
  type: ClusterIP
  port: 50000
  annotations:
    traefik.ingress.kubernetes.io/affinity: "true"  # Enable backend sticky sessions.
    traefik.ingress.kubernetes.io/service.sticky.cookie: "true"  # Cookie-based session stickiness.
    # NOTE: When setting maxage, the user's session in the browser may be disconnected after the time limit.
    #       If the session is disconnected, the user needs to refresh the browser to interact with ComfyUI again.
    traefik.ingress.kubernetes.io/service.sticky.cookie.maxage: "28800"  # Sticky session sec (8 hours)

ingress:
  enabled: true
  host: "comfyui.atom.demo.supremind.info"
  annotations: {}
  tls:
    enabled: true
    secretName: "comfyui-tls"
  timeoutPolicy:
    response: 2h
    idle: 3h

resources:
  limits:
    nvidia.com/gpu: "1"
  # requests:
  #   cpu: 100m
  #   memory: 128Mi

livenessProbe:
  httpGet:
    path: /queue
    port: http
readinessProbe:
  httpGet:
    path: /queue
    port: http

nodeSelector: {}

tolerations: []

affinity: {}
